<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        d:DataContext="{Binding Source={StaticResource SampleDataSource}}"
        Title="Faq" Height="350" Width="800" Loaded="Window_Loaded" MinWidth="664" Icon="monkey.ico">
    <Window.Resources>
        <DataTemplate x:Key="FaqItemTemplate">
            <StackPanel Width="500" Margin="20">
                <TextBox Margin="0,0,0,10" ScrollViewer.PanningMode="VerticalOnly" BorderBrush="{x:Null}" BorderThickness="0" Background="Transparent" IsReadOnly="True" Text="{Binding Question,Mode=OneWay}" TextWrapping="Wrap" FontWeight="Bold" />
                <TextBox BorderBrush="{x:Null}" ScrollViewer.PanningMode="VerticalOnly" BorderThickness="0" Background="Transparent" IsReadOnly="True" Text="{Binding Answer,Mode=OneWay}" TextWrapping="Wrap" />
            </StackPanel>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplate1">
            <VirtualizingStackPanel/>
        </ItemsPanelTemplate>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="searchText" Width="200" Grid.Row="2" Height="22"/>
        <ScrollViewer Padding="0,20" PanningMode="VerticalOnly" ManipulationBoundaryFeedback="ScrollViewer_ManipulationBoundaryFeedback">
            <ItemsControl x:Name="listBox" ItemTemplate="{DynamicResource FaqItemTemplate}" ItemsSource="{Binding}" Margin="40,0" ItemsPanel="{DynamicResource ItemsPanelTemplate1}" />
        </ScrollViewer>
    </Grid>
</Window>
